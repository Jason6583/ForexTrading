<Page x:Class="ForexTrading.Pages.ForexPage_Pages.TotalPortfolio_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForexTrading.Pages.ForexPage_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="150"
      Title="TotalPortfolio_Page">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="BUY ASSET" 
                       Style="{StaticResource MenuTextBlockStyle}" 
                       HorizontalAlignment="Center" 
                       Margin="10" 
                       PreviewMouseDown="TextBlock_PreviewMouseDown" 
                   Grid.Row="0"/>
        <TextBlock Text="Active assets" Style="{StaticResource ClassicTextBlockStyle}" HorizontalAlignment="Center"  Grid.Row="1"/>
        <Separator  Grid.Row="2"/>
        <ScrollViewer Grid.Row="3">
            <StackPanel x:Name="StackPanel_PortFolio">

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
